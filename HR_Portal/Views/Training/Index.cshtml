@using HR_Portal.Models;
@model IEnumerable<Training>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-white">Training List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Training" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp Create New Training</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-stripped user-table" style="width:100%">
    <thead>
        <tr class="table-dark">
            <th>Training Name</th>
            <th>Training Type</th>
            <th>Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr class="table-primary">
                <td>
                    @obj.TrainingName
                </td>
                <td>
                    @obj.TrainingType
                </td>
                <td>
                    @obj.Cost
                </td>
                <td>
                    <a asp-controller="Training" asp-action="Edit" asp-route-id="@obj.TrainingId" class="btn btn-sm btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Training" asp-action="Delete" asp-route-id="@obj.TrainingId" class="btn btn-sm btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
