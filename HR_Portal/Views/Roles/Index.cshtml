@using HR_Portal.Models;

@{
    ViewData["Title"] = "Index";
}
@{

}
@if (ViewBag.Users is not null)
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h1 class="text-white">Roles List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Roles" asp-action="Assign" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Assign Role to User</a>
                <a asp-controller="Roles" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp Create New Role</a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-stripped user-table" style="width:100%">
        <thead>
            <tr class="table-dark">
                <th>User</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in ViewBag.Users)
            {
                <tr class="table-primary">
                    <td>
                        @obj.FirstName @obj.LastName
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        <form asp-controller="Roles" asp-action="UnAssign">
                            <input name = "user" value = "@obj.UserId" hidden>
                            <input name = "role" value = "@obj.Name" hidden>
                            <input type="submit" class="btn btn-sm btn-danger" value ="UnAssign" >  
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
</table>
}
