@using HR_Portal.Models;

@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-controller="Roles" asp-action="Create">
    <div class="border border-secondary rounded p-3 mt-4">
        <h2 class="text-white"><i class="bi bi-box"></i> Create Role</h2>
        <br />
        <div class="mb-3">
            <label class="label-gray"><i class="bi bi-card-text"></i> Role Name</label>
            <input name="role" class="input2"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Roles" asp-action="Index" class="btn btn-primary" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
