@using HR_Portal.Models;
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-white">Departments List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp Create New Department</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-stripped user-table" style="width:100%">
    <thead>
        <tr class="table-dark">
            <th>DepartmentName</th>
            <th>Director</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(ViewBag.Directors is not null)
        @foreach(var obj in ViewBag.Directors)
        {
            <tr class="table-primary">
                <td>
                    @obj.DepartmentName
                </td>
                <td>
                    @obj.FirstName @obj.LastName
                </td>
                <td>
                    <a asp-controller="Department" asp-action="Edit" asp-route-id="@obj.DepartmentId" class="btn btn-sm btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Department" asp-action="Delete" asp-route-id="@obj.DepartmentId" class="btn btn-sm btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
