@using HR_Portal.Models;
@model IEnumerable<Position>
@{
    ViewData["Title"] = "Index";
}
@{
   
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-white">Positions List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Position" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp Create New Position</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-stripped user-table" style="width:100%">
    <thead>
        <tr class="table-dark">
            <th>Position Name</th>
            <th>Department</th>
            <th>Base Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in ViewBag.Result)
        {
            <tr class="table-primary">
                <td>
                    @obj.PositionName
                </td>
                <td>
                    @obj.DepartmentName
                </td>
                <td>
                    @obj.BaseSalary
                </td>
                <td>
                    <a asp-controller="Position" asp-action="Edit" asp-route-id="@obj.PositionId" class="btn btn-sm btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Position" asp-action="Delete" asp-route-id="@obj.PositionId" class="btn btn-sm btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
